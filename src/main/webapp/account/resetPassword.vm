<!DOCTYPE html>
#parse('/tcom/template.rap.vm')
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>重置密码        </title>
        #includeNewRapStatic
    </head>
    <body>
        #bodyNewStart
        <div style="width:600px;">

        #if($isOk == true && $resetSuc == true)
            <b>密码重置成功! 赶紧去登陆吧！</b>
        #else

            <form name="formMain" action="$accountUrl.doResetPassword" class="form-horizontal" method="post" onsubmit="return formOnSubmit(this);">
                <input id="email" name="email"  type="hidden" value="$email"/>
                <input id="policy" name="policy"  type="hidden" value="$policy" />

                <div class="form-group row">
                    <label class="col-sm-2 control-label">新密码</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <input id="password" name="password" class="form-control" type="password" placeholder="请输入密码" />
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 control-label">确认新密码</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <input id="confirmPassword" name="confirmPassword" class="form-control" type="password" placeholder="请再次输入密码" />
                        </p>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <span class="alert alert-danger" id="errMsg"  #if($errMsg && $errMsg != "")#else style="display:none;"#end>$!utils.escapeInH($errMsg)</span>
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                           <input type="submit" value="重置密码" class="btn btn-primary" />
                        </p>
                    </div>
                </div>
            </form>

        #end
        </div>
        #bodyEnd
        <script type="text/javascript">
            function formOnSubmit(form) {
                if ($('#password').val() != $("#confirmPassword").val()) {
                    $('#errMsg').html('两次密码输入不一致');
                    $('#errMsg').show();
                    return false;
                }
                return rap.util.validator.validForm(form);
            }
        </script>
    </body>
</html>
